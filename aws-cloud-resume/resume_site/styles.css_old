/* global */

* {
  box-sizing: border-box;
}

body {
  font-family: Roboto;  
}

h2 {
  font-style: italic;
  font-weight: normal;
  font-size: 30px;
}

.resume {
  width: 70%;
  background-color: #FAF9F6;
  border: black;
  margin-left: auto;
  margin-right: auto;
  margin-top: 3%;
  margin-bottom: 3%;
  padding: 20px;
  border:1px solid black;
}

/* Top banner */
header {
  margin-left: auto;
  margin-right: auto;
  margin-top: -2%;
  margin-bottom: -3%;
  padding: 3%;
}

.name-title {
  display: inline-block;
  text-align: left;
  width: 79%;
  margin-top: -10%;
}

.name-title h1 {
  font-size: 60px;
  font-weight: normal;
}

.name-title p {
  margin-top: -40px;
  font-size: 25px;
  font-style: italic;
}

.contact-info {
  display: inline-block;
  text-align: left;
  width: 20%;
}

.contact-info p {
  margin-top: 1px;
  margin-bottom: 1px;
}

/* sections */

.certifications, .technical, .employment-history, .projects {
  padding: 3.5%;
  margin-top: -3%;
  margin-bottom: -2%;
}

/* Certifications */

.badge-box {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  padding: 0 4px;
}

.badge {
  min-width: 25%;
  min-height: 50px;
  object-fit: cover;
  margin-top: 8px;
  padding: 0 4px;
}

.jobs {
  padding-left: 2.5%;
}

.job-title {
  padding-left: 2%;
}

/* Technical Skills */
.tech-list ul {
  display: flex;
  flex-wrap: wrap;
}

.tech-list ul li {
  width: 33.33%;
}

/* projects */
.proj {
  padding-left: 2.5%;
}

/* footer */
footer {
  text-align: center;
}

/* Smaller screens */
@media only screen and (max-width: 800px) {
  /* Global */
  .resume {
    width: 100%;
    background-color: #FAF9F6;
    border: black;
    margin-left: auto;
    margin-right: auto;
    margin-top: 3%;
    margin-bottom: 3%;
    padding: 20px;
    border:1px solid black;
  }
  
  /* Top banner */
  .contact-info {
    display: inline;
    text-align: left;
    width: 20%;
  }
  .name-title h1 {
    font-size: 40px;
    font-weight: normal;
  }
  .name-title p {
    margin-top: -20px;
    font-size: 20px;
    font-style: italic;
  }
  
  /* Technical Skills */
  .tech-list {
    margin-left: 20px;
  }
  .tech-list ul {
    display: inline;
  }
}